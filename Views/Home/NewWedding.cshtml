@model ViewModel
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <h2>Plan Your Wedding</h2>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-3">
        <a class="btn btn-outline-dark" href="dashboard" role="button">Dashboard</a>
        <a class="btn btn-outline-secondary" asp-action="logOut" role="button">Log Out</a>
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <form action="createWedding" method="POST">
            <div class="form-group">

                <label for="wedderOne">Wedder One:</label>
                <input id="wedderOne" asp-for="Wedding.wedderOne" type="text" class="form-control">
                <span asp-validation-for="Wedding.wedderOne"></span>
                <br>
                <label for="wedderTwo">Wedder Two:</label>
                <input id="wedderTwo" asp-for="Wedding.wedderTwo" type="text" class="form-control">
                <span asp-validation-for="Wedding.wedderTwo"></span>
                <br>
                <div class="well"> 
                    <label for="date">Date:</label>
                    <input id="date" asp-for="Wedding.date" type="date" class="form-control">
                    <span asp-validation-for="Wedding.date"></span>
                </div>
                <br>
                <label for="address">Wedding Address:</label>
                <input id="address" asp-for="Wedding.address" type="text" class="form-control">
                <span asp-validation-for="Wedding.address"></span>
                <br>
            </div>
            <button type="submit" class="btn btn-secondary">Create</button>
        </form>
    </div>
    <div class="col-md-6"></div>
</div>