@model User
<div class="row">
    <div class="col-md-6">
        <h1>Register</h1>
        <form asp-action ="Register" asp-controller="Home" method="POST">
            <div class="form-group">

                <label asp-for="first_name">First Name:</label>
                <input asp-for="first_name" type="text" class="form-control">
                <span asp-validation-for="first_name" style="color: red;"></span>
                <br>
                <label asp-for="last_name">Last Name:</label>
                <input asp-for="last_name" type="text" class="form-control">
                <span asp-validation-for="last_name" style="color: red;"></span>
                <br>
                <label asp-for="email">Email Address:</label>
                <input asp-for="email" type="text" class="form-control">
                <span asp-validation-for="email" style="color: red;"></span>
                <br>
                <label asp-for="password">Password:</label>
                <input asp-for="password" type="password" class="form-control">
                <span asp-validation-for="password" style="color: red;"></span>
                <br>
                <label asp-for="password_confirm">Re-Enter Password:</label>
                <input asp-for="password_confirm" type="password" class="form-control">
                <span asp-validation-for="password_confirm" style="color: red;"></span>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
        </form>
    </div>
    <div class="col-md-6">
        <h1>Login</h1>
        <form action="Login" method="POST">
            <div class="form-group">
                <label for="email">Email Address:</label>
                <input type="text" class="form-control" name="email">
                <br>
                <label for="password">Password:</label>
                <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
        </form>
    </div>
</div>
